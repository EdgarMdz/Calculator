<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Modules.Info.AppInformation.AppInformationView"
             Title="App Info">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding AppName}" TextColor="Black"/>
            <Label Text="{Binding AppVersion}" TextColor="Black"/>
            <Label Text="{Binding Author}" TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>